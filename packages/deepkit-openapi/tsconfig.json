{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "CommonJS",
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist/cjs",
    "jsx": "react-jsx",
    "jsxImportSource": "@deepkit/template",
    "composite": true
  },
  "reflection": true,
  "includes": [
    "*.ts",
    "*.tsx"
  ],
  "references": [
    { "path": "../deepkit-openapi-core" }
  ]
}
